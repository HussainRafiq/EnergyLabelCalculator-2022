@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{ViewData["Title"] = localizer["ResetPassword"];};
<div class="text-center">

   <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">

            <h2>@localizer["ResetPassword"]</h2>
            @if (ViewBag.Error != null)
            {
                <p class="text-danger">@localizer[ViewBag.Error]</p>
            }
                 <form method="post">
                     <input  type="hidden" name="UserID" value="@ViewBag.UserID"/>
                     <div class="input-group mb-3  rounded-pill bg-white shadow-sm">
                         <input type="Password" required placeholder="@localizer["Password"]" name="Password" class="form-control border-0 rounded-pill bg-white shadow-sm">
                     </div>
                     <div class="input-group mb-3  rounded-pill bg-white shadow-sm">
                         <input type="Password" required placeholder="@localizer["ConfirmPassword"]" name="ConfirmPassword" class="form-control border-0 rounded-pill bg-white shadow-sm">
                     </div>
                 
                     <br />
                     <button type="submit" class="btn btn-dark">@localizer["Submit"]</button>
                 
                 </form>
           
        </div>
        <div class="col-3">

        </div>
    </div>

</div>
